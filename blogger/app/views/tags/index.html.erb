<h1>All Tags</h1>

<ul>
    <% @tags.each do |tag| %>
        <li>
            <%= link_to tag.name, tag_path(tag) %> 
            <%= link_to "delete tag?", tag_path(tag), method: :delete, data:{confirm: "You really want to delete this tag?"} %>
        </li>
    <% end %>
</ul><br />

